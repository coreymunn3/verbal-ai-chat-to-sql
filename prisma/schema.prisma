generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id         Int      @id @default(autoincrement())
  name       String
  valuation  Float // Store in billions (e.g., 350.00 for $350B)
  dateJoined DateTime
  country    String
  city       String?
  industry   String
  investors  String // Investors stored as a comma-separated string
}
